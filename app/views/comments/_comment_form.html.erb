	<%= form_for(@comment) do |f| %>

	  <%= render 'shared/error_messages', :object => f.object %>

	  <div class="subject">
		<%= f.label :subject %><br />
		<%= f.text_field :subject %>
	  </div>

	  <div class="body">
		<%= f.label :body %><br />
		<%= f.text_area :body %>
	  </div>

	  <div class="actions">
		<%= f.submit "Post Comment" %>
	  </div>

	<% end %>
